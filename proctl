#/bin/env sh

# Default ecosystem file.
ECO_FILE="ecosystem.config.js"
# Default ecosystem environment.
ENV_NODE="development"
# Command to be passed on to PM2
CMD="$1"; shift
# Default PM2 binary.
PM2="./bin/pm2"

case $CMD in
    start|stop|restart|reload|delete)
    ;;
    *)
        ECO_FILE=""
    ;;
esac

echo "exec: $PM2 $CMD $ECO_FILE --env $ENV_NODE $@"

$PM2 $CMD $ECO_FILE --env $ENV_NODE $@

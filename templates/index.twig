<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Calorie Calculator</title>
    
    <link href="https://fonts.googleapis.com/css?family=Baloo+Tamma" rel="stylesheet" />
    <link rel="stylesheet" href="css/base.css" />
    <link rel="icon" sizes="192x192" href="/images/gear-icons-192x192.png" />
</head>
<body>
	<main>
		<div>
			<h1>Calorie Calculator</h1>
		</div>
		<div>
            <form id="calcalc-parser" name="form-parser" method="POST" enctype="application/x-www-form-urlencoded">
                <textarea id="calcalc-parser-text" name="text" rows="10" cols="50">{{ form_text }}</textarea>
                <input id="calcalc-parser-submit" name="submit" type="submit" name="Parse" />
			</form>
		</div>
		{%  if data|length > 0 %}
		<div>
		    <table>
		      <thead>
		          <tr>
		              <td>Name</td>
		              <td>Quantity</td>
		              <td>Multiplier</td>
		              <td>Units</td>
		          </tr>
		      </thead>
		      <tbody>
    		      {% for entry in data %}
    		      <tr>
    		          <td>{{ entry.displayLabel }}</td>
    		          <td>{{ entry.quantity }}</td>
    		          <td>{{ entry.multiplier }}</td>
    		          <td>{{ entry.unit }}</td>
    		      </tr>
    		      {% endfor %}
		      </tbody>
		    </table>
		</div>
		{% endif %}
	</main>
</body>
</html>
